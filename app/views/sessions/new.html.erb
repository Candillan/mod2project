<h1>Log In</h1> 

<% if flash.notice %>
<p><%= flash.notice %></p>
<% end %>

<%=form_tag '/login' do%>
    <p><%=label_tag :username %>
    <%=text_field_tag :"user[username]" %></p>
    <p><%=label_tag :password %>
    <%=password_field_tag :"user[password]" %></p>
    <%=submit_tag :submit%>
<%end%>

<h4>Don't have an account yet? <%= link_to "Create New Profile", new_user_path %></h4>