<p style="color:green"><%= flash.notice %></p>

<h1>User: <%= @user.username %></h1>
<p>Critic: <% if @user.critic %>
            Yes
            <% else %> 
            No 
            <% end %></p>
Games Reviewed: 
<ul>
    <% @reviews.select do |review| %>
        <li>
            <%= link_to review.game.name, review_path(review) %> review, published at: <%= review.created_at %>
            <% if session[:user_id] == @user.id %>
            <ul><li><%= link_to "Edit Review", edit_review_path(review) %></li></ul>
            <% end %>
        </li>
    <% end %>
</ul>
<br>
<%= link_to "All Games", games_path %>
<div><%= form_tag ({controller: 'sessions', action: 'destroy', method: 'post'}) do %>
  <input type=submit value='logout'>
<% end %></div>