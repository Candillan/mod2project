<h1>Add A New User</h1>

<% if flash[:errors] %>
<% flash[:errors].each do |error| %>
<p><%= error %></p>
<% end %>
<% end %>

<%= form_for @user do |f| %>
<p><%= f.label :username %>
<%= f.text_field :username %></p>
<p><%= f.label :password %>
<%= f.text_field :password %></p>
<%= f.submit %>
<% end %>